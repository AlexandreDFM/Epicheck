# This is an example file. DO NOT commit the actual secrets.yaml to version control!
# Copy this file to secrets.yaml and fill in your actual values.
# Then create the secret using: kubectl apply -f kubernetes/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: epicheck-secrets
  namespace: epicheck
  labels:
    app: epicheck
type: Opaque
stringData:
  # Epitech API credentials
  EPITECH_USERNAME: "your-username"
  EPITECH_PASSWORD: "your-password"

  # Office 365 OAuth credentials
  OFFICE365_CLIENT_ID: "your-client-id"
  OFFICE365_CLIENT_SECRET: "your-client-secret"
  OFFICE365_TENANT_ID: "your-tenant-id"

  # Azure AD credentials
  AZURE_AD_CLIENT_ID: "your-azure-ad-client-id"
  AZURE_AD_CLIENT_SECRET: "your-azure-ad-client-secret"
  AZURE_AD_TENANT_ID: "your-azure-ad-tenant-id"

  # API keys
  API_KEY: "your-api-key"

  # Session secret
  SESSION_SECRET: "your-session-secret"

  # Database credentials (if applicable)
  DB_HOST: "database-host"
  DB_PORT: "5432"
  DB_NAME: "epicheck"
  DB_USER: "epicheck_user"
  DB_PASSWORD: "your-db-password"
